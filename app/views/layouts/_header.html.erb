<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to link_to t(:app_name), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(:home), root_path %></li>
        <li><%= link_to t(:help), static_pages_help_path %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "header.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("static_pages.header.profile"), "#" %></li>
              <li><%= link_to t("static_pages.header.setting"), edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("static_pages.header.logout"), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
          <li><%= link_to t(:book), books_path %></li>
        <% else %>
          <li><%= link_to t("static_pages.header.login"), new_user_session_path %></li>
        <% end %>

      </ul>
    </nav>
  </div>
</header>
