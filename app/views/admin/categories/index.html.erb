<% provide :title, t("admin.categories.all") %>
<div class="title">
  <%= link_to t("admin.categories.add_more_category"), new_admin_category_path,
    class: "btn btn-md btn-primary" %>
  <h1><%= t "admin.categories.all" %></h1>
</div>
  <table class="table table-striped">
    <tr>
      <th><%= t "admin.categories.category_name" %></th>
    </tr>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, [:admin, category] %></td>
      </tr>
    <% end %>
  </table>
<%= paginate @categories %>
<%= page_entries_info @categories %>
